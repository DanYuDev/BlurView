<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_blur"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:background="@color/accent_material_light"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="Blur"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_action_bar_content_inset_material"/>

        <TextView
            android:id="@+id/tv_blur_drawable"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:background="@color/accent_material_light"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="BlurDrawable"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_action_bar_content_inset_material"/>
        <TextView
            android:id="@+id/tv_blur_behind_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:background="@color/accent_material_light"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="BlurBehindView（跟随滚动）"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_action_bar_content_inset_material"/>
        <TextView
            android:id="@+id/tv_blur_behind_view2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:background="@color/accent_material_light"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="BlurBehindView（底层滚动）"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_action_bar_content_inset_material"/>
    </LinearLayout>
</RelativeLayout>